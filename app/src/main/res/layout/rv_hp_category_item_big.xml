<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <ImageView
       android:layout_marginTop="20dp"
        android:id="@+id/imageviewCategory"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewTitleCategoryBig"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
       android:layout_marginRight="30dp"
        android:lines="3"
        android:text="Saradnja je dobra,ali moze jos bolje ,zelimo da pomognemo Srbiji  da ostvari cilj"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageviewCategory" />

    <TextView

        android:id="@+id/textViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="PoLITIKA"
        android:layout_marginLeft="30dp"
        android:textAllCaps="true"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleCategoryBig" />


    <View
        android:id="@+id/viewLine"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="9dp"
        android:background="#cbced4"
        app:layout_constraintStart_toEndOf="@+id/textViewCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleCategoryBig" />


    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:text="15:30"
        android:maxLength="16"
       android:textColor="#9da4ae"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/viewLine"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleCategoryBig" />

    <Button

        android:id="@+id/buttonLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="60dp"
        android:background="@color/light_blue"
        android:text="@string/all_news"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleCategoryBig" />


</androidx.constraintlayout.widget.ConstraintLayout>