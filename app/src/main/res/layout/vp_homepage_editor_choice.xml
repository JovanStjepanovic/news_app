<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewEditorChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editor_choice"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>


    <View
        android:id="@+id/viewLine"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_marginLeft="10dp"
        android:background="#ff2e4e"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditorChoice" />


    <View
        android:id="@+id/viewLine2"
        android:layout_width="330dp"
        android:layout_height="3dp"
        android:layout_marginTop="11dp"
        android:background="#dee1e4"
        app:layout_constraintStart_toEndOf="@+id/viewLine"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditorChoice" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSlider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine"
        android:layout_marginBottom="30dp"/>


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circleIndicator"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewPagerSlider"
        app:layout_constraintEnd_toEndOf="@+id/viewPagerSlider"
        app:layout_constraintStart_toStartOf="@+id/viewPagerSlider" />













</androidx.constraintlayout.widget.ConstraintLayout>