<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textViewShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/related_news"
        android:textAllCaps="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/viewLine3"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginLeft="10dp"
        android:background="#8a929f"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewShare" />

    <View
        android:id="@+id/viewLine2"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="13dp"
        android:background="#dee1e4"
        app:layout_constraintStart_toEndOf="@+id/viewLine3"
        app:layout_constraintTop_toBottomOf="@+id/textViewShare" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLine3" />




</androidx.constraintlayout.widget.ConstraintLayout>