<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#143e6c"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/imageViewCommentRs"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/komentar" />


        <TextView
            android:id="@+id/textViewKomentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="65dp"
            android:text="komentar"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView

            android:id="@+id/imageViewMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/menu" />





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#143e6c"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >



        <EditText
           android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/drawable_background_transparent"   />

     <ImageView

         android:id="@+id/imageviewSearch"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_marginLeft="-40dp"
         android:layout_marginTop="4dp"
         android:src="@drawable/news_search"/>


    </LinearLayout>











</androidx.constraintlayout.widget.ConstraintLayout>